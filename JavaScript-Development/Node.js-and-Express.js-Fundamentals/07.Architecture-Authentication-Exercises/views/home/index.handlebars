<div>
  {{#each articles}}
  <div>
    <article>
      <header>
        <h2>{{this.title}}</h2>
      </header>

      <p>{{this.content}}
      </p>

      <small>
        {{this.author.fullName}}
      </small>
      <footer>
        <div class="pull-right">
          <a class="btn btn-default btn-xs" href="/article/details/{{this.id}}">Read more &raquo;</a>
        </div>
      </footer>
    </article>
  </div>
  {{/each}}
</div>